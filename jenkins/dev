pipeline {
    agent {
        label 'master'
    }

    stages {
        stage("Checkout code from git") {
            steps {
                sh 'ssh i2g-inventory-dev "cd /home/ubuntu/wi-online-inventory && git pull"'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'ssh i2g-inventory-dev "cd /home/ubuntu/wi-online-inventory && npm install"'
            }
        }

        stage('Deploy to dev') {
            steps {
                sh 'ssh i2g-inventory-dev "cd /home/ubuntu/wi-online-inventory && pm2 restart pm2.config.js"'
            }
        }
    }
}